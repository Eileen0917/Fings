<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Places</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @places.each do |place| %>
        <tr>
          <td><%= place.name %></td>
          <td><%= place.description %></td>
          <td><%= link_to 'Show', place, class: 'btn btn-default btn-s' %></td>
          <td><%= link_to 'Edit', edit_place_path(place), class: 'btn btn-default btn-s' %></td>
          <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-s' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Place', new_place_path, class: 'btn btn-default btn-s' %>
  <%= link_to 'See Things', things_path, class: 'btn btn-default btn-s' %>
  
</div>