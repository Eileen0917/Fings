<%= form_for(thing) do |f| %>
  <% if thing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(thing.errors.count, "error") %> prohibited this thing from being saved:</h2>

      <ul>
      <% thing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.text_area :quantity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :place_id %>
    <%= f.select :place_id, places.map { |place| [place.name, place.id] }, {}, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-default' %>
  </div>


<% end %>
