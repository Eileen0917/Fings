<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Things</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Place</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @things.each do |thing| %>
        <tr>
          <td><%= thing.name %></td>
          <td><%= thing.description %></td>
          <td><%= thing.quantity %></td>
          <td><%= thing.place.try(:name) %></td>
          <td><%= link_to 'Show', thing, class: 'btn btn-default btn-xs' %></td>
          <td><%= link_to 'Edit', edit_thing_path(thing), class: 'btn btn-default btn-xs' %></td>
          <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Thing', new_thing_path %>
  <%= link_to 'See Places', places_path %>
</div>